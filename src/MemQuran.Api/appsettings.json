{
  "AzureKeyVaultName": "<pass in secrets or env var when deploying>",
  "AzureUserManagedIdentityClientId": "<pass in secrets or env var when deploying>",
  "IdentityProviderSettings": {
    "Authority": "<pass in secrets or env var when deploying>",
    "Audience": "<pass in secrets or env var when deploying>"
  },
  // Authentication property below is generated in appsettings.Development.json by using command: dotnet user-jwts create --audience memquran-api
  // Tokens are generated in the user secrets folder for development use only. You can use the token which will be valid for local development
  // https://learn.microsoft.com/en-us/aspnet/core/security/authentication/jwt-authn?view=aspnetcore-10.0&tabs=windows
  "Authentication": {},
  "ContentDeliverySettings": {
    // Local, JsDelivr
    "ContentDeliveryType": "JsDelivr",
    "CachingSettings": {
      // None, Memory, Distributed, Hybrid
      "CacheType": "None",
      "InitialCachingEnabled": false,
      "SlidingExpiration": false,
      "CacheDurationTimeSpan": "02:00:00:00",
      "EvictCachingEnabled": false
    }
  },
  "Clients": {
    "JsDelivrService": {
      "Enabled": true,
      "BaseUrl": "https://cdn.jsdelivr.net",
      "Version": "v0.0.63",
      "DefaultTimeout": "00:00:15",
      "IncrementalBackoffFactorSeconds": 5,
      "UserName": "",
      "Password": ""
    }
  },
  "PingSettings": {
    "ExternalEndpoints": [
      {
        "Name": "HttpStatus 200 Endpoint",
        "Url": "https://mock.httpstatus.io/200"
      }
    ],
    "Timeout": "00:00:10"
  },
  "AwsHostSettings": {
    "ProfileName": "",
    "AccessKey": "",
    "SecretKey": "",
    "ServiceUrl": "http://dockerhost:4566",
    "RegionEndpoint": "eu-west-2"
  },
  "AwsTopicSettings": {
    "WebUpdateTopicSettings": {
      "WorkerName": "memquran_api_web_update_topic_worker",
      "Source": "memquran_web_update_topic1_v1",
      "WithSubscribedQueues": [
        "memquran_web_update_queue1_v1",
        "memquran_web_update_queue2_v1"
      ],
      "SubscribeToSource": "memquran_web_update_queue1_v1",
      "NumberOfInstances": 1,
      "IsFifoQueue": true,
      "IsFifoContentBasedDeduplication": true,
      "BuildWithErrorQueue": true,
      "ReceiveMaximumNumberOfMessages": 10
    }
  },
  "RedisSettings": {
    "ConnectionString": "dockerhost:6379"
  },
  "SeqSettings": {
    "ServerUrl": "http://dockerhost:5341",
    "OpenTelemetryTraceIngestUrl": "http://dockerhost:5341/ingest/otlp/v1/traces",
    "ApiKey": "<Get from secrets -> SeqSettings:ApiKey>",
    "MinimumLevel": "Trace",
    "LevelOverride": {
      "Default": "Warning"
    }
  },
  "JaegerSettings": {
    "Endpoint": "http://dockerhost:4317"
  },
  "BetterStackSettings": {
    "IngestBaseUrl": "https://s1582243.eu-nbg-2.betterstackdata.com",
    "BearerToken": "<Get from secrets -> BetterStackSettings:BearerToken>",
    "DefaultTimeout": "00:00:15"
  },
  "HealthCheckSettings": {
    "Ping": {
      "Name": "Ping External Endpoints",
      "Tag": "Ping",
      "Enabled": true,
      "TimeOut": "00:00:15"
    },
    "LocalFiles": {
      "Name": "Local JSON Files Exist",
      "Tag": "LocalFiles",
      "Enabled": false,
      "TimeOut": "00:00:15"
    },
    "JsDelivr": {
      "Name": "JsDelivr CDN",
      "Tag": "Cdn",
      "Enabled": true,
      "TimeOut": "00:00:15"
    },
    "Redis": {
      "Name": "Redis Cache",
      "Tag": "DistributedCache",
      "Enabled": true,
      "TimeOut": "00:00:15"
    },
    "BetterStack": {
      "Name": "Better Stack Telemetry",
      "Tag": "Telemetry",
      "Enabled": true,
      "TimeOut": "00:00:15"
    }
  },
  "Console": {
    "FormatterName": "CustomTimePrefixingFormatter",
    "FormatterOptions": {
      "SingleLine": true,
      "IncludeScopes": false,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss.ffff ",
      "UseUtcTimestamp": true,
      "JsonWriterOptions": {
        "Indented": true
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "MemQuran.Api": "Information",
      "MemQuran.Infrastructure.Caching": "Information",
      "Topica": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.Hosting": "Warning",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.AspNetCore.Mvc": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.Extensions.Caching.StackExchangeRedis.RedisCache": "Information"
    }
  },
  "AllowedHosts": "*"
}
