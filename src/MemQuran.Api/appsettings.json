{
  "ConnectionStrings": {
    "Redis": "dockerhost:6379"
  },
  "ContentDeliverySettings": {
    "Type": "Local", // Unknown, Local, JsDelivr, JsDelivrFallback
    "CachingSettings": {
      "CacheType": "Memory", // Local, Memory, Hybrid
      "InitialCachingEnabled": true,
      "SlidingExpiration": false,
      "CacheDurationTimeSpan": "02:00:00:00"
    }
  },
  "Clients": {
    "JsDelivrService": {
      "Enabled": true,
      "BaseUrl": "https://cdn.jsdelivr.net",
      "Version": "v0.0.63",
      "DefaultTimeout": "00:00:05",
      "IncrementalBackoffFactorSeconds": 5,
      "UserName": "",
      "Password": ""
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "System.Net.Http": "Warning",
      "Microsoft.Extensions.Caching.StackExchangeRedis.RedisCache": "Information"
    },
    "Console": {
      "FormatterName": "CustomTimePrefixingFormatter",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss.ffff ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    }
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "MemQuran.API",
        "Uri": "https://localhost:3123/api/health"
      },
      {
        "Name": "CDN",
        "Uri": "https://localhost:3123/api/health/readiness"
      }
    ],
    "Webhooks": [
      {
        // Notification to endpoint when failure and then when restored
        "Name": "Webhook (https://memquran.requestcatcher.com)",
        "Uri": "https://memquran.requestcatcher.com/anything",
        "Payload": "{ \"message\": \"Webhook report for [[LIVENESS]] Health Check: [[FAILURE]] - Description: [[DESCRIPTIONS]]\"}",
        "RestorePayload": "{ \"message\": \"[[LIVENESS]] Health Check is back to life\"}"
      }
    ],
    // Options: https://github.com/Xabaril/AspNetCore.Diagnostics.HealthChecks/blob/master/src/HealthChecks.UI/Configuration/Settings.cs
    "EvaluationTimeInSeconds": 30,
    "MinimumSecondsBetweenFailureNotifications": 60,
    "MaximumExecutionHistoriesPerEndpoint": 100,
    "ApiMaxActiveRequests": 1
  },
  "AllowedHosts": "*"
}
